extends layout.pug

block content

    if errors
        each err in errors
            span.error=err
    h1.centered Login
    .form-container
        form(method='POST')
            input#name(type='text', name='username' placeholder='Enter username')
            input#password(type='password' name='password' placeholder='Enter password')
            button(type='submit') Login
            a.hint(href='/register') Register a new account here